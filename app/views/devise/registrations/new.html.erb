<div class="grid-container">
  <div class="grid-x grid-padding-x">
    <div class="medium-8 cell">

      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, :class=> "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
         <label class="label">Password (<%= @minimum_password_length %> characters minimum)</label>
        <% else %>
         <%= f.label :password, :class=> "label" %>
        <% end %>
        <%= f.password_field :password, id: "Password", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :class=> "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :first_name, :class=> "label" %>
        <%= f.text_field :first_name, autocomplete: "first-name" %>
      </div>

      <div class="field">
        <%= f.label :last_name, :class=> "label" %>
        <%= f.text_field :last_name, autocomplete: "last-name" %>
      </div>

      <div class="field">
        <%= f.label :username, :class=> "label" %>
        <%= f.text_field :username, autocomplete: "username" %>
      </div>

      <div class="field">
        <%= f.label :bio, :class=> "label" %>
        <%= f.text_area :bio, autocomplete: "bio" %>
      </div>

      <div class="field">
        <%= f.label :location, :class=> "label" %>
        <%= f.text_field :location, autocomplete: "location" %>
      </div>

      <div class="button-group">
        <%= f.submit "Sign up", :class=>"button" %>
        <%= render "devise/shared/buttons" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
